{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.vue", "src/**/*.js", "src/**/*.ts"],
  "exclude": ["node_modules", "dist", "**/*.test.js", "**/*.spec.js"]
}
